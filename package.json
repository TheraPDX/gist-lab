{
  "name": "gist-lab",
  "version": "0.3.0",
  "description": "Meteor Gist management experiment",
  "scripts": {
    "dev": "meteor --settings development.json",
    "test": "mocha .scripts/mocha_boot.js client/**/tests/**/*.js --compilers js:babel-core/register",
    "lint": "./node_modules/.bin/eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/reponame.git"
  },
  "author": "Michał Świtoń <switonmichal@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.2.5",
    "github": "^1.1.2",
    "lodash": "^4.13.1",
    "mantra-core": "^1.2.0",
    "meteor-auth": "^0.2.0",
    "moment": "^2.13.0",
    "react": "^15.0.0",
    "react-dom": "^15.0.0",
    "react-komposer": "^1.3.0",
    "react-mounter": "^1.0.0",
    "react-simple-di": "^1.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-core": "6.x.x",
    "babel-plugin-react-require": "2.x.x",
    "babel-polyfill": "6.x.x",
    "babel-preset-es2015": "6.x.x",
    "babel-preset-react": "6.x.x",
    "babel-preset-stage-2": "6.x.x",
    "babel-root-slash-import": "1.x.x",
    "chai": "3.x.x",
    "enzyme": "^2.2.0",
    "eslint": "^2.7.0",
    "eslint-plugin-meteor": "^3.6.0",
    "eslint-plugin-react": "^4.3.0",
    "jsdom": "^8.0.4",
    "mocha": "2.x.x",
    "postcss-safe-parser": "^1.0.7",
    "react-addons-test-utils": "^15.0.0",
    "sinon": "1.17.x"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "browsers": [
          "last 2 versions"
        ]
      }
    },
    "parser": "postcss-safe-parser"
  },
  "cssModules": {
    "extensions": [
      "scss"
    ],
    "globalVariables": [
      "client/configs/variables.scss"
    ],
    "outputJsFilePath": {
      ".*node_modules/.*": "{dirname}/{basename}"
    }
  }
}
